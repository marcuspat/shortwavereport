# Shortwave Monitor Environment Configuration

# Application Environment
NODE_ENV=production
PORT=3000
HEALTH_PORT=3001

# AI Service Configuration (Choose ONE)
# Option 1: OpenRouter (Free models available - RECOMMENDED)
OPENROUTER_API_KEY=your-openrouter-api-key-here
AI_PROVIDER=openrouter
AI_MODEL=meta-llama/llama-3.2-3b-instruct:free

# Option 2: OpenAI (Paid API)
# OPENAI_API_KEY=your-openai-api-key-here
# AI_PROVIDER=openai
# AI_MODEL=gpt-4o-mini

# Option 3: Local/Mock (For development)
# USE_LOCAL_AI=true
# AI_PROVIDER=local

# AI Service Settings
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=1000
AI_TIMEOUT=30000

# Security Configuration
SESSION_SECRET=your-super-secure-secret-here-change-this-immediately
BCRYPT_ROUNDS=10
SESSION_MAX_AGE=86400000

# Health Check Server
HEALTH_CHECK_INTERVAL=30000

# Resilience Configuration
ENABLE_RETRIES=true
ENABLE_CIRCUIT_BREAKERS=true
ENABLE_RATE_LIMITING=true
ENABLE_GRACEFUL_DEGRADATION=true

# Retry Configuration
MAX_RETRIES=3
INITIAL_RETRY_DELAY=1000
MAX_RETRY_DELAY=30000
RETRY_BACKOFF_MULTIPLIER=2

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RESET_TIMEOUT=60000
CIRCUIT_BREAKER_MONITORING_PERIOD=120000

# Rate Limiting Configuration
SDR_DISCOVERY_RATE_LIMIT=20
AUDIO_CAPTURE_RATE_LIMIT=10
EXTERNAL_API_RATE_LIMIT=100
RATE_LIMIT_WINDOW_MS=60000

# SDR Discovery Configuration
MAX_CONCURRENT_SDR_CHECKS=5
SDR_DISCOVERY_TIMEOUT=10000
SDR_CONNECTION_TIMEOUT=5000

# Audio Capture Configuration
AUDIO_SAMPLE_RATE=16000
AUDIO_CAPTURE_DURATION=60
AUDIO_CAPTURE_CHANNELS=1
AUDIO_FORMAT=wav

# Memory and Storage Configuration
MEMORY_DIR=data/memory
AUDIO_DIR=data/audio
LOG_DIR=data/logs
CLEANUP_INTERVAL=3600000

# Logging Configuration
LOG_LEVEL=info
ERROR_LOG_ENABLED=true
PERFORMANCE_METRICS_ENABLED=true

# Development Configuration
NODE_ENV=development
DEBUG_MODE=false
MOCK_SDR_RESPONSES=false

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECKS_ENABLED=true
PERFORMANCE_MONITORING_ENABLED=true