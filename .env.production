# Production Environment Configuration

NODE_ENV=production
PORT=3000
HEALTH_PORT=3000
WEBSOCKET_PORT=8080

# Redis Configuration
REDIS_URL=redis://redis:6379

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Production Settings
DEBUG=false
MOCK_DATA=false
SKIP_SDR_DISCOVERY=false

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Audio Processing
MAX_AUDIO_FILES=1000
AUDIO_RETENTION_HOURS=24

# SDR Configuration
SDR_TIMEOUT_MS=10000
SDR_RETRY_ATTEMPTS=3
MAX_CONCURRENT_SDR_CHECKS=5

# Security
API_RATE_LIMIT=100
CORS_ORIGIN=https://yourdomain.com

# Performance
AUDIO_SAMPLE_RATE=48000
AUDIO_BUFFER_SIZE=8192