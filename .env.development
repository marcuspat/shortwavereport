# Development Environment Configuration

NODE_ENV=development
PORT=3000
HEALTH_PORT=3000
WEBSOCKET_PORT=8080

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Development Settings
DEBUG=true
MOCK_DATA=true
SKIP_SDR_DISCOVERY=false

# Logging
LOG_LEVEL=debug
LOG_FORMAT=pretty

# Audio Processing (reduced for development)
MAX_AUDIO_FILES=100
AUDIO_RETENTION_HOURS=2

# SDR Configuration (faster timeouts for development)
SDR_TIMEOUT_MS=5000
SDR_RETRY_ATTEMPTS=2
MAX_CONCURRENT_SDR_CHECKS=3

# Security (relaxed for development)
API_RATE_LIMIT=1000
CORS_ORIGIN=*